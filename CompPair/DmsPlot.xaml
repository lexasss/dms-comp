<UserControl x:Class="DmsComparison.DmsPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DmsComparison"
             mc:Ignorable="d" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="bool2vis"/>
        <local:ValueStateToBrushConverter x:Key="state2brush"/>

        <Style x:Key="shrink" TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Content" Value="🠊"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="12"/>
                </Style>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="🠈" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <!--Canvas x:Name="cnvDms" Grid.Row="0"
                Visibility="{Binding IsDmsReady, Converter={StaticResource bool2vis}}"
                MouseDown="DmsPrompt_MouseDown"/-->
        <Image x:Name="imgDms" Grid.Row="0"
               Stretch="Fill"
               Visibility="{Binding IsDmsReady, Converter={StaticResource bool2vis}}"
               MouseDown="DmsPrompt_MouseDown"/>
        <Label Grid.Row="0"
               Content="Click to select a DMS measurement file"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               MouseDown="DmsPrompt_MouseDown">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDmsReady}" Value="False">
                            <Setter Property="Opacity" Value="100"/>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="100"/>
                            <Setter Property="Foreground">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource {x:Static SystemColors.HighlightColorKey}}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <Label x:Name="lblDms" Grid.Row="0"
               Visibility="{Binding IsDmsReady, Converter={StaticResource bool2vis}}"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"/>

        <Grid x:Name="stpScanDataProperties"
              HorizontalAlignment="Right"
              VerticalAlignment="Top"
              Visibility="{Binding IsDmsReady, Converter={StaticResource bool2vis}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1"
                  DataContext="{Binding Dms}"
                  Background="#DDFFFFFF"
                  Width="320"
                  Margin="4"
                  ToolTipService.InitialShowDelay="0"
                  ToolTipService.BetweenShowDelay="0">
                <Grid.Resources>
                    <Style x:Key="Header" TargetType="Label">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="Border">
                        <Setter Property="Margin" Value="4,0"/>
                        <Setter Property="BorderBrush" Value="#FF8A8A8A"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="1">
                    <Label Content="Sample (out)"
                           Style="{StaticResource Header}"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="2">
                    <Label Content="Sensor (loop)"
                           Style="{StaticResource Header}"/>
                </Border>
                <Border Grid.Row="0" Grid.Column="3">
                    <Label Content="Ambient"
                           Style="{StaticResource Header}"/>
                </Border>

                <Label Grid.Row="1" Grid.Column="0">Flow rate</Label>
                <Label Grid.Row="2" Grid.Column="0">Humidity</Label>
                <Label Grid.Row="3" Grid.Column="0">Temperature</Label>
                <Label Grid.Row="4" Grid.Column="0">Pressure</Label>
                <Label Grid.Row="5" Grid.Column="0">Pump PWM</Label>
                
                <Label Grid.Row="1" Grid.Column="1"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SampleFlowState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sample.Flow.Avg}" ContentStringFormat="{}{0} lpm">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sample.Flow.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sample.Flow.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="2" Grid.Column="1"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SampleHumidityState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sample.Humidity.Avg}" ContentStringFormat="{}{0}%">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sample.Humidity.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sample.Humidity.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="3" Grid.Column="1"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SampleTemperatureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sample.Temperature.Avg}" ContentStringFormat="{}{0}°">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sample.Temperature.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sample.Temperature.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="4" Grid.Column="1"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SamplePressureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sample.Pressure.Avg}" ContentStringFormat="{}{0} mbar">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sample.Pressure.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sample.Pressure.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="5" Grid.Column="1"
                       Content="{Binding Path=Scan.SystemData.Sample.PumpPWM.Avg}" ContentStringFormat="{}{0}%">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sample.PumpPWM.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sample.PumpPWM.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>

                <Label Grid.Row="1" Grid.Column="2" 
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SensorFlowState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sensor.Flow.Avg}" ContentStringFormat="{}{0} lpm">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sensor.Flow.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sensor.Flow.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="2" Grid.Column="2" 
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SensorHumidityState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sensor.Humidity.Avg}" ContentStringFormat="{}{0}%">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sensor.Humidity.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sensor.Humidity.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="3" Grid.Column="2"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SensorTemperatureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sensor.Temperature.Avg}" ContentStringFormat="{}{0}°">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sensor.Temperature.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sensor.Temperature.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="4" Grid.Column="2"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.SensorPressureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Sensor.Pressure.Avg}" ContentStringFormat="{}{0} mbar">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sensor.Pressure.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sensor.Pressure.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="5" Grid.Column="2"
                       Content="{Binding Path=Scan.SystemData.Sensor.PumpPWM.Avg}" ContentStringFormat="{}{0}%">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Sensor.PumpPWM.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Sensor.PumpPWM.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>

                <!--Label Grid.Row="1" Grid.Column="3"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.FetTemperatureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.FetTemperature.Avg}" ContentStringFormat="{}{0}°"/-->
                <Label Grid.Row="2" Grid.Column="3"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.AmbientHumidityState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Ambient.Humidity.Avg}" ContentStringFormat="{}{0}%">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Ambient.Humidity.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Ambient.Humidity.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="3" Grid.Column="3"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.AmbientTemperatureState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Ambient.Temperature.Avg}" ContentStringFormat="{}{0}°">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Ambient.Temperature.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Ambient.Temperature.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Label Grid.Row="4" Grid.Column="3"
                       Foreground="{Binding Path=Scan.SystemData.ErrorRegister.AmbientHumidityState, Converter={StaticResource state2brush}}"
                       Content="{Binding Path=Scan.SystemData.Ambient.Pressure.Avg}" ContentStringFormat="{}{0} mbar">
                    <Label.ToolTip>
                        <TextBlock>
                            <Run Text="{Binding Scan.SystemData.Ambient.Pressure.Min}"/>
                            <Run> .. </Run>
                            <Run Text="{Binding Scan.SystemData.Ambient.Pressure.Max}"/>
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
            </Grid>

            <ToggleButton x:Name="tbnScanDataProperties" Grid.Column="1"
                          Style="{StaticResource shrink}"
                          ToolTip="Toggle visibility of scan data properties"
                          IsChecked="{Binding IsScanDataPropertiesPanelMinimized}"/>
        </Grid>
    </Grid>
</UserControl>
