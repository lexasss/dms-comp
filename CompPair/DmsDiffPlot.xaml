<UserControl x:Class="DmsComparison.DmsDiffPlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DmsComparison"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="#FF8A8A8A"
                BorderThickness="0,3">
            <Grid>
                <!--Canvas x:Name="cnvDmsDiff"
                    MouseDown="DiffPrompt_MouseDown"/-->
                <Image x:Name="imgDmsDiff" 
                       Stretch="Fill"
                       MouseDown="DiffPrompt_MouseDown"/>
                <Label x:Name="lblDmsDiff" Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"/>
            </Grid>
        </Border>
        <Label Content="Click to select two DMS measurement files"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               MouseDown="DiffPrompt_MouseDown">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Opacity" Value="0"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDifferenceReady}" Value="False">
                            <Setter Property="Opacity" Value="100"/>
                        </DataTrigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Opacity" Value="100"/>
                            <Setter Property="Foreground">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource {x:Static SystemColors.HighlightColorKey}}"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
    </Grid>
</UserControl>
