<UserControl x:Class="DmsComparison.Distance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:local="clr-namespace:DmsComparison"
             xmlns:dms="clr-namespace:DmsComparison.Data;assembly=Dms"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="290" d:DesignWidth="300">
    
    <UserControl.Resources>
        <Style TargetType="Label" x:Key="Header">
            <Setter Property="Padding" Value="0,0,0,12"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="BorderBrush" Value="#FF646464"/>
            <Setter Property="Margin" Value="0,4,0,8"/>
        </Style>

        <ObjectDataProvider x:Key="DmsDataSource"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dms:Source" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DmsDataType"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dms:Type"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DmsDataFilter"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dms:Filter"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DmsDataFilterLimits"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="dms:Limits"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Label Content="Distance"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
            <Separator/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Label Style="{StaticResource Header}" Content="Data"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource DmsDataSource}}"
                      SelectedItem="{Binding DataSource, Mode=TwoWay}"
                      Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource DmsDataType}}"
                      SelectedItem="{Binding DataType, Mode=TwoWay}"
                      Margin="0,0,0,4"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource DmsDataFilter}}"
                      SelectedItem="{Binding DataFilter, Mode=TwoWay}"
                      Margin="0,0,0,4"/>
            <StackPanel Margin="8,0">
                <UniformGrid Columns="2">
                    <TextBox Text="{Binding DataFilterFrom, Mode=TwoWay}" KeyUp="FilterSettings_KeyUp"/>
                    <TextBox Text="{Binding DataFilterTo, Mode=TwoWay}" KeyUp="FilterSettings_KeyUp"/>
                </UniformGrid>
                <ComboBox ItemsSource="{Binding Source={StaticResource DmsDataFilterLimits}}"
                          SelectedItem="{Binding DataFilterLimits, Mode=TwoWay}"
                          Margin="0,4"/>
            </StackPanel>

            <Separator/>
            
            <Label Style="{StaticResource Header}" Content="Pre-processing"/>
            <CheckBox Content="Rectify"
                      IsChecked="{Binding ShouldRectify}"/>
            <Separator/>
            <Label Style="{StaticResource Header}" Content="Normalization"/>
            <StackPanel x:Name="stpNormalizationType">
                <!-- to be fill in the code -->
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1" 
                BorderBrush="#FF646464"
                BorderThickness="0.5"
                Margin="12,0,12,0"/>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <Label Style="{StaticResource Header}" Content="Algorithm"/>
            <StackPanel x:Name="stpAlgorithms">
                <!-- to be fill in the code -->
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Separator/>
            <TextBox x:Name="txbDistance"
                     HorizontalAlignment="Center"
                     IsReadOnly="True"
                     FontWeight="Bold"
                     FontSize="16"
                     Background="{x:Null}"
                     BorderBrush="{x:Null}"/>
        </StackPanel>
    </Grid>
</UserControl>
